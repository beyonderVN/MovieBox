<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vinhsang.demo">
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.vinhsang.demo.v_chat.application.ChatApplication"
        android:allowBackup="true"
        android:icon="@mipmap/vivmall"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".v_chat.activity.main.VChatActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vinhsang.demo.v_chat.activity.login.BeautifullLoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name="com.vinhsang.demo.v_chat.activity.chatbox.ChatActivity"
            android:label="@string/title_activity_chat"
            android:parentActivityName="com.vinhsang.demo.v_chat.activity.main.VChatActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".v_chat.activity.main.VChatActivity" />
        </activity>
        <activity
            android:name="com.vinhsang.demo.v_chat.sampleio.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.vinhsang.demo.v_chat.sampleio.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="adjustResize|stateVisible" />

        <!-- <service -->
        <!-- android:name=".v_chat.ChatService" -->
        <!-- android:enabled="true" -->
        <!-- android:exported="true" /> -->

    </application>

</manifest>